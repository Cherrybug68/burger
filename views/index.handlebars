<div class="row">
      <div id = "header" class = "col-md-12">
        <img src="../assets/images/CovingtonBurgerLogo.png">
        <h1>Yum...Burgers!!!</h1>
      </div>
</div>

<div class="row">
    <div class="col-md-6">
      <h2>Burgers you can eat</h2>
        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          <li>
             {{this.burger_name}}
             <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
             </form>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
    </div>   

    <div class="col-md-6">
        <h2>Burgers You Devoured</h2>
           <ul>
             {{#each burgers}}
             {{#if this.devoured}}
                 <li>
                    {{this.burger_name}}
                    <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                    </form>
                  </li>
              {{/if}}
              {{/each}}
            </ul>
    </div>
</div>         

<div class="row">
  <div class="col-md-3">
    <h2>Add a Burger</h2>
      <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
  </div>   
</div>      
